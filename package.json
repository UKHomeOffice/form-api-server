{
  "name": "form-api-server",
  "version": "0.0.1",
  "description": "Form API Server",
  "main": "index.js",
  "scripts": {
    "build-ts": "tsc",
    "start": "npm run serve",
    "serve": "node dist/bootstrap.js",
    "watch-node": "nodemon dist/bootstrap.js",
    "watch-ts": "tsc -w",
    "test": "npm run test:all ",
    "clean-coverage": "rm -rf ./coverage",
    "test:int": "nyc --report-dir=./coverage/int mocha --file ./test/integration/setup-test.ts -r ts-node/register test/integration/**/*.spec.ts ",
    "test:unit": "nyc --report-dir=./coverage/unit mocha -r ts-node/register test/unit/**/*.spec.ts",
    "test:all": "npm run clean-coverage && npm run test:unit && npm run test:int"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && npm run test"
    }
  },
  "lint-staged": {},
  "nyc": {
    "reporter": [
      "html",
      "lcov",
      "text",
      "text-summary"
    ],
    "temp-directory": "./coverage/.nyc_output",
    "all": true,
    "exclude": "typings",
    "extension": [
      ".ts"
    ],
    "sourceMap": true,
    "instrument": true,
    "include": [
      "src/**/*.ts"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/DigitalPatterns/form-api-server.git"
  },
  "keywords": [
    "form"
  ],
  "author": "Amin Mohammed-Coleman",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/DigitalPatterns/form-api-server/issues"
  },
  "homepage": "https://github.com/DigitalPatterns/form-api-server#readme",
  "devDependencies": {
    "@fluffy-spoon/substitute": "^1.88.0",
    "@types/chai": "^4.1.7",
    "@types/continuation-local-storage": "^3.2.1",
    "@types/hapi__joi": "^15.0.1",
    "@types/mocha": "^5.2.6",
    "@types/node": "^12.0.2",
    "chai": "^4.2.0",
    "husky": "^2.4.0",
    "mocha": "^6.1.4",
    "nyc": "^14.1.1",
    "sqlite3": "^4.0.8",
    "ts-node": "^8.2.0",
    "tslint": "^5.16.0",
    "typescript": "^3.4.5"
  },
  "dependencies": {
    "@hapi/joi": "^15.0.3",
    "@types/bluebird": "^3.5.27",
    "@types/cors": "^2.8.5",
    "@types/dotenv": "^6.1.1",
    "@types/express": "^4.16.1",
    "@types/keycloak-connect": "^4.5.1",
    "@types/lodash": "^4.14.132",
    "@types/validator": "^10.11.0",
    "@types/winston": "^2.4.4",
    "class-transformer": "^0.2.3",
    "class-validator": "^0.9.1",
    "continuation-local-storage": "^3.2.1",
    "cors": "^2.8.5",
    "dotenv": "^8.0.0",
    "express": "^4.17.1",
    "inversify": "^5.0.1",
    "inversify-binding-decorators": "^4.0.0",
    "inversify-express-utils": "^6.3.2",
    "keycloak-connect": "^6.0.1",
    "lint-staged": "^8.2.0",
    "lodash": "^4.17.11",
    "pg": "^7.11.0",
    "pg-hstore": "^2.3.2",
    "reflect-metadata": "^0.1.13",
    "sequelize": "^5.8.6",
    "sequelize-typescript": "^1.0.0-beta.3",
    "swagger-express-ts": "^1.0.1",
    "swagger-ui-dist": "^3.22.3",
    "winston": "^3.2.1"
  }
}
